syntax on
set nocompatible
filetype plugin indent on

set number	
"set showbreak=+++	
"set nowrap
"set textwidth=100	
set showmatch	
set visualbell	
set nohlsearch

set modeline
set modelines=2
 
set smartcase	
set ignorecase	
set incsearch	
 
set autoindent	
set shiftwidth=2	
set smartindent	
set smarttab	
set softtabstop=2	
set tabstop=2
 
set ruler	
 
set undolevels=1000	
set backspace=indent,eol,start	

map <C-Tab> <C-^>
nnoremap <C-]> :set columns=45 <bar> set lines=18<CR>
nnoremap <C-\> :set columns=60 <bar> set lines=25<CR>
